@model ALFINapp.API.Models.ViewUsuario

<div class="row mb-3">
    <div class="col-md-6">
        <h3>@Model.NombresCompletos</h3>
        <div class="mb-3">
            <label for="dniSeccionActivar" class="form-label">DNI</label>
            <input type="text" class="form-control" id="dniSeccionActivar" name="dniSeccionActivar" value="@Model.Dni"
                required readonly>
        </div>
        <div class="mb-3">
            <label for="rolSeccionActivar" class="form-label">Rol</label>
            <input type="text" class="form-control" id="rolSeccionActivar" name="rolSeccionActivar" value="@Model.Rol"
                readonly>
        </div>
        <div class="mb-3">
            <label for="regionSeccionActivar" class="form-label">Region</label>
            <input type="text" class="form-control" id="regionSeccionActivar" name="regionSeccionActivar"
                value="@Model.REGION" readonly>
        </div>
    </div>

    <div class="col-md-6">
        <div class="mb-3">
            <label for="departamentoSeccionActivar" class="form-label">Departamento</label>
            <input type="text" class="form-control" id="departamentoSeccionActivar" name="departamentoSeccionActivar"
                value="@Model.Departamento" readonly>
        </div>
        <div class="mb-3">
            <label for="provinciaSeccionActivar" class="form-label">Provincia</label>
            <input type="text" class="form-control" id="provinciaSeccionActivar" name="provinciaSeccionActivar"
                value="@Model.Provincia" readonly>
        </div>
        <div class="mb-3">
            <label for="distritoSeccionActivar" class="form-label">Distrito</label>
            <input type="text" class="form-control" id="distritoSeccionActivar" name="distritoSeccionActivar"
                value="@Model.Distrito" readonly>
        </div>
    </div>

    @if (Model.Estado == "ACTIVO")
    {
        <div class="button-container mb-10">
            <a href="javascript:void(0);" class="btn btn-danger" onclick="desactivarAsesor('@Model.Dni', @Model.IdUsuario)">
                Desactivar
            </a>
        </div>
    }
    else
    {
        <div class="button-container mb-10">
            <a href="javascript:void(0);" class="btn btn-success" onclick="activarAsesor('@Model.Dni', @Model.IdUsuario)">
                Activar
            </a>
        </div>
    }
</div>