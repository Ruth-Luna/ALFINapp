<form asp-action="TipificarMotivo" asp-controller="Tipificaciones" method="post">
    <div class="row mb-4">
        <h3 class="label-fortip">Contacto con Cliente - Y Tipificaciones Asignadas:</h3>
        <input type="hidden" name="IdAsignacion" value="[" ID_asignacion"]" id="IdAsignacion">
        <div class="form-group row align-items-center mb-4">
            <div class="col-12 col-md-4">
                <label for="Telefono_" class="form-label">Telefono </label>
                <input class="form-control" name="tipificaciones[].Telefono" id="Telefono_db_" type="text"
                    value=".Telefonos[i].Numero" readonly>
                <div class="spacing"></div>

                <textarea class="form-control" id="comentarioAsesor_teldb_" data-telefono=".Telefonos[].Numero"
                    data-id-cliente="d_cliente">.Telefonos[].Comentario</textarea>
                <div class="spacing"></div>
                <a href="javascript:void(0);" class="btn btn-primary"
                    onclick="enviarComentarioTelefonoDB('d_cliente', '.Telefonos[].Numero', 'comentarioAsesor_teldb_', )">
                    <i class="fa fa-pencil"></i>
                </a>
            </div>

            <div class="col-12 col-md-8 mt-2 mt-md-0">
                <label for="tipificacionSelect_db_" class="form-label mt-2">Tipificacion Asignada :</label>
                <input type="text" name="tipificaciones[].TipificacionId" id="tipificacionSelect_db_"
                    style="display: none;">
                <div class="custom-select">
                    <div class="custom-selected-option" id="selectedOption_tipificacionSelect_db_"
                        onclick="mostrarOpciones('tipificacionSelect_db_')">
                        Seleccione una Tipificación
                    </div>
                    <div class="custom-options" id="opciones_tipificacionSelect_db_">
                        <input type="text" class="custom-search" id="busqueda_tipificacionSelect_db_"
                            onkeyup="filtrarOpciones('tipificacionSelect_db_')" placeholder="Buscar...">

                        <div class="custom-option" id="opcion__tipificacionSelect_db_"
                            onclick="seleccionarOpcion('tipificacionSelect_db_', 'IdTipificacion', 'DescripcionTipificacion', 'db_')">
                            DescripcionTipificacion
                        </div>
                    </div>
                </div>

                <div class="form-group mt-3" id="fechaVisitaContainer_db_" style="display: none;">
                    <div class="row">
                        <div class="col">
                            <label for="fechaVisita_db_" class="form-label">Fecha de Visita:</label>
                            <input class="form-control" type="date" name="tipificaciones[].FechaVisita"
                                id="fechaVisita_db_" />
                        </div>
                        <div class="col">
                            <label for="AgenciaComercialDb_" class="form-label">Agencia Comercial:</label>
                            <select class="form-select" name="tipificaciones[].AgenciaAsignada"
                                id="AgenciaComercialDb_">
                                <option value="">Seleccione la Agencia</option>
                                <option value="sucursal_comercial - agencia_comercial">
                                    sucursal_comercial - agencia_comercial
                                </option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row align-items-center mt-1">
                    <div class="col">
                        <input class="form-control" id="GRUPO_MONTO" type="text"
                            value=".Telefonos[].DescripcionTipificacion" readonly>
                    </div>
                    <div class="col-auto">
                        <a class="btn btn-primary" href="javascript:void(0)" id="buttonDerivacionContainer_db_"
                            onclick="enviarFormularioDerivacion('AgenciaComercialDb_', 'fechaVisita_db_', .IdBase, 'Telefono_db_', 2, 'IdAsignacion')"
                            style="display: none;">
                            <i class="fa fa-upload" aria-hidden="true"></i> Envie la Derivacion
                        </a>
                    </div>

                    <div class="col-auto">
                    </div>

                    <div class="col-auto">
                        <span class="tooltip-symbol" title="Esta tipificación fue extraída del anterior mes">
                            <i class="fa fa-info-circle" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="col-auto">
                        <span class="tooltip-symbol"
                            title="Este cliente no tiene una tipificacion Asignada a este numero">
                            <i class="fa fa-info-circle" aria-hidden="true"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="alert alert-info">
                    Este numero es inexistente y no se le pueden asignar Tipificaciones
                </div>
            </div>
        </div>
        <hr>

        <div class="spacing"></div>

        <div class="form-group">
            <div class="alert alert-info" role="alert">
                Use este boton para agregar las tipificaciones de los numeros de TELEFONOS ASIGNADOS POR LA EMPRESA
            </div>
            <button class="btn btn-success" type="submit">Guardar Tipificaciones</button>
            <button class="btn btn-danger" type="button" data-bs-dismiss="modal" aria-label="Close">Cancelar</button>
        </div>
</form>