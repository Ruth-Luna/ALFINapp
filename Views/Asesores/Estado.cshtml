@model List<ALFINapp.Infrastructure.Persistence.Models.Usuario>
@{
}
@section Styles {
    <link rel="stylesheet" href="~/css/main_page.css">
}

<div class="container mt-4">
    <div class="p-4 bg-light border rounded-3">
        <div class="text-center">
            <span class="d-inline-block p-2 rounded">
                <h3>Seccion Modificar Estado del Asesor</h3>
            </span>
        </div>
        <div class="row mt-3 mb-2">
            <div class="col-md-12">
                <label for="selectAsesor" class="form-label">Seleccione un Asesor</label>
                <select class="form-select" id="selectAsesor" name="selectAsesor"
                    onchange="cargarInterfazAsesor(this.value)">
                    <option value="">Seleccione un Asesor</option>
                    @foreach (var AsesorAsignados in Model)
                    {
                        if (AsesorAsignados.Estado == "ACTIVO")
                        {
                            <option value="@AsesorAsignados.IdUsuario">@AsesorAsignados.NombresCompletos</option>
                        }
                        else
                        {
                            <option style="background-color: rgb(255, 93, 93);" value="@AsesorAsignados.IdUsuario">
                                @AsesorAsignados.NombresCompletos <i class="fa fa-circle-exclamation"></i> <span> -- Asesor
                                    DESACTIVADO</span></option>
                        }
                    }
                </select>
            </div>

            <div id="interfazAsesorSelect" class="row mt-3" style="display: none;">
                <!-- Aqui se cargara la vista parcial del asesor seleccionado -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Asesores/Usuarios.js?v=@DateTime.Now.Ticks"></script>
}